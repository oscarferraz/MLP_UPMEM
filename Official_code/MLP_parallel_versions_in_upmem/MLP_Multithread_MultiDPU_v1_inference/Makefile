HOST_BINARY := host
KDOT_SIGMOID_BINARY := KDOT_SIGMOID
KDOT_SIGMOID2_BINARY := KDOT_SIGMOID2

HOST_SOURCES := host.c
DPU_SOURCES := KDOT_SIGMOID.c
DPU_SOURCES_1 := KDOT_SIGMOID2.c



.PHONY: all clean run

all: ${HOST_BINARY} ${KDOT_SIGMOID_BINARY} ${KDOT_SIGMOID2_BINARY}

clean:
	rm -f ${HOST_BINARY} ${KDOT_SIGMOID_BINARY} ${KDOT_SIGMOID2_BINARY}

run: all
	./${HOST_BINARY}

${HOST_BINARY}: ${KDOT_SIGMOID_BINARY} ${KDOT_SIGMOID2_BINARY} ${HOST_SOURCES}
	clang -O2 -DDPU_BINARY='"$(realpath ${KDOT_SIGMOID_BINARY})" "$(realpath ${KDOT_SIGMOID2_BINARY})"' `dpu-pkg-config --cflags --libs dpu` ${HOST_SOURCES} -o $@

${KDOT_SIGMOID_BINARY}: ${DPU_SOURCES}
	clang --target=dpu-upmem-dpurte -DNR_TASKLETS=2 -O2 ${DPU_SOURCES} -o $@

${KDOT_SIGMOID2_BINARY}: ${DPU_SOURCES_1}
	clang --target=dpu-upmem-dpurte -DNR_TASKLETS=2 -O2 ${DPU_SOURCES_1} -o $@
